        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_SD1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a04"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_SD1_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a05"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_SD1_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a06"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_SD1_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a07"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_6"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_SD1_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a08"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_7"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/cb_SD1_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a09"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_8"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonNextSD1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        app:layout_constraintTop_toBottomOf="@id/cb_SD1_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
